VERSION=4.9
PACKAGE=sed
SRC=${PACKAGE}-${VERSION}.tar.gz
URL=${SITE_GNU}/${PACKAGE}/${SRC}
CATEGORY=textproc
DEPS=libs/libiconv

configure() {
	echo "Configuring $PACKAGE"
	cd "${SRCDIR}/${PACKAGE}-${VERSION}"
	LIBS=-lrt ./configure 
}

build() {
	echo "Building $PACKAGE"
	cd "${SRCDIR}/${PACKAGE}-${VERSION}"
	make -j ${NCPU}
}

install() {
	echo "Installing $PACKAGE to ${DESTDIR}"
	cd "${SRCDIR}/${PACKAGE}-${VERSION}"
	make install DESTDIR="${DESTDIR}"
}
